<h1>プロフィール編集</h1>

<%= form_with model: @user, local: true do |f| %>
    <div class="form-group">
        <%= f.label :username, "ユーザーネーム" %>
        <%= f.text_field :username, class: 'form-control', required: true, maxlength: '30' %>
    </div>
    <div class="form-group">
        <%= f.submit "保存", class: 'btn btn-primary btn-block' %>
    </div>
<% end %>