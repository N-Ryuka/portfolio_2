<div class="row">
    <div class="col-md-3">
        <%= form_with model: @tag, local: true do |f| %>
            <%= f.label :name, 'カテゴリー名' %>
            <br>
            <%= f.text_field :name, class:'form-control' %>
            <br>
            <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>
    <br>
    <div class="col-md-9">
        <table class="table">
            <thead>
                <tr>
                    <th>カテゴリー名</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @tags.each do |tag| %>
                <tr>
                    <td><%= tag.name %></td>
                    <td><%= link_to '編集', edit_tag_path(tag), class: 'btn btn-primary' %></td>
                    <td><%= link_to '削除', category_path(tag), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-primary' %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>