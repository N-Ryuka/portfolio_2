<div class="container-login">
<h1>アカウント編集</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username, "ユーザーネーム" %>
    <%= f.text_field :username, autofocus: true, autocomplete: 'name', class: 'form-control', required: true, maxlength: '30' %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Eメール" %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image, "プロフィール画像" %><br/>
    <%= f.file_field :image, autofocus: true, autocomplete: 'image', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control',
                          minlength: @minimum_password_length,
                          maxlength: '30' %>

    <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control',
                          minlength: @minimum_password_length,
                          maxlength: '30' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "現在のパスワード" %>
    <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control',
                          minlength: @minimum_password_length,
                          maxlength: '30' %>

    <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
  </div>

  <div class="form-group">
    <%= f.submit t('.update'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
    <%= link_to 'ログアウト', destroy_user_session_path, data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-danger btn-block' %>
  </div>
</div>
