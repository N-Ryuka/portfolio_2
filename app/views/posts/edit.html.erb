<div class="row">
    <div class="col-md-8 offset-md-2">
<h1>編集ページ</h1>
<%= form_with model: @post, local: true do |f| %>
    <div class="form-goup">
        <%= f.label :タイトル %><br>
        <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :カテゴリー %><br>
        <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '選択して下さい' }, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :内容 %><br>
        <%= f.text_area :body, size: "30x10", class: "form-control" %>
    </div>
    <div><%= f.submit "編集する", class: "btn btn-primary btn-block" %></div>
<% end %>
</div>