<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>新規投稿ページ</h1>
        <%= form_with model: @post, local: true do |f| %>
        <div class="form-goup">
            <%= f.label :タイトル %><br>
            <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
            <span>タグ</span>
            <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) do |tag| %>
                <div class="form-check">
                    <%= tag.label class: 'form-check-label' do %>
                        <%= tag.check_box class: 'form-check-input', require: true %>
                        <%= tag.text %>
                    <% end %>
                </div>
            <% end %>
        </div>
        <div class="form-group">
            <%= f.label :内容 %><br>
            <%= f.text_area :body, size: "30x10", class: "form-control" %>
        </div>
        <div><%= f.submit "投稿する", class: "btn btn-primary btn-block" %></div>
    <% end %>
</div>